---
// src/components/Navbar.astro

// Define your navigation items as a constant
const navigationItems = [
  { name: "Home", href: "/" },
  { name: "Features", href: "#features" },
  { name: "Stats", href: "#stats" },
  { name: "Pricing", href: "#pricing" },
  { name: "Blog", href: "/blogs" }
];

// You could also define these as props if you want to pass them from a parent component
---

<!-- Navigation Bar -->
<nav class="fixed w-full z-50 glass-card px-6 py-3 flex justify-between items-center border-b border-gray-100 bg-white">
  <div class="flex items-center">
    <div class="text-2xl font-extrabold text-gray-800">Flipside<span class="text-primary-dark">Brain</span></div>
  </div>
  
  <div class="hidden md:flex items-center space-x-8">
    {navigationItems.map((item) => (
      <a 
        href={item.href} 
        class="text-gray-600 hover:text-primary-dark transition-colors"
      >
        {item.name}
      </a>
    ))}
  </div>
  
  <div class="flex items-center space-x-4">
    <a href="#" class="text-gray-600 hover:text-primary-dark font-medium">Log In</a>
    <a href="#" class="px-4 py-2 bg-[#818cf8] hover:bg-primary-dark text-white font-medium rounded-full transition-colors">Sign Up</a>
  </div>
</nav>