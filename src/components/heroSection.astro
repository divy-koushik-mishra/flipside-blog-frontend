            <p class="text-sm text-gray-600">
              From <span class="font-medium">1,000+</span> satisfied users
            </p>
          </div>
        </div>
      </div>

      <div class="md:w-1/2 flex justify-center">
        <div class="relative">
          <div
            class="absolute -top-6 -left-6 w-40 h-40 bg-[#fecdd3]/30 rounded-full"
          >
          </div>
          <div
            class="absolute -bottom-10 -right-10 w-56 h-56 bg-[#c4b5fd]/20 rounded-full"
          >
          </div>

          <!-- Dashboard Preview -->
          <div
            class="relative glass-card rounded-2xl shadow-xl overflow-hidden border border-gray-100 w-full max-w-md"
          >
            <div
              class="p-4 bg-white/90 border-b border-gray-100 flex justify-between items-center"
            >
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 rounded-full bg-red-400"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                <div class="w-3 h-3 rounded-full bg-green-400"></div>
              </div>
              <div class="text-sm font-medium text-gray-500">
                Flipside Brain Dashboard
              </div>
            </div>

            <div class="p-6">
              <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-bold">Focus Summary</h3>
                <span class="text-sm text-gray-500">Today</span>
              </div>

              <div class="mb-8">
                <div class="flex justify-between mb-2">
                  <span class="text-sm text-gray-600">Focus Score</span>
                  <span class="text-sm font-medium">82/100</span>
                </div>
                <div
                  class="w-full h-3 bg-gray-100 rounded-full overflow-hidden"
                >
                  <div
                    class="h-full w-4/5 bg-gradient-to-r from-[#a5b4fc] to-primary-dark rounded-full"
                  >
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4 mb-8">
                <div class="bg-surface-light p-4 rounded-xl">
                  <div class="text-sm text-gray-500 mb-1">Focus Time</div>
                  <div class="text-2xl font-bold">4h 12m</div>
                </div>
                <div class="bg-surface-light p-4 rounded-xl">
                  <div class="text-sm text-gray-500 mb-1">Distractions</div>
                  <div class="text-2xl font-bold">8</div>
                </div>
              </div>

              <div>
                <div class="flex justify-between mb-4">
                  <h4 class="font-medium">Weekly Trend</h4>
                  <span class="text-sm text-primary-dark">+14%</span>
                </div>
                <div class="chart-bar">
                  <div class="h-1/2"></div>
                  <div class="h-2/3"></div>
                  <div class="h-1/3"></div>
                  <div class="h-1/2"></div>
                  <div class="h-3/4"></div>
                  <div class="h-full"></div>
                  <div class="h-4/5"></div>
                </div>
                <div class="flex justify-between text-xs text-gray-400 mt-2">
                  <span>Mon</span>
                  <span>Tue</span>
                  <span>Wed</span>
                  <span>Thu</span>
                  <span>Fri</span>
                  <span>Sat</span>
                  <span>Sun</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
